<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/beart_recycler_item_textviewtitile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="left|center"
            android:textColor="#000000"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/beart_recycler_item_imageviewbody"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_below="@id/beart_recycler_item_textviewtitile"
            android:scaleType="center"
            android:src="@mipmap/beart_dialogue" />

        <LinearLayout
            android:id="@+id/beart_recycler_item_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/beart_recycler_item_imageviewbody"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/beart_recycler_item_imageviewinterstellar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/beart_interstellar" />

            <ImageView
                android:id="@+id/beart_recycler_item_imageviewgivethe"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/beart_givethe" />

            <ImageView
                android:id="@+id/beart_recycler_item_imageviewdialogue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/beart_dialogue" />

            <ImageView
                android:id="@+id/beart_recycler_item_imageviewshare"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/beart_share" />


        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>