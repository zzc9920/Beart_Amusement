<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/beart_recycler_item_textviewtitile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="left|center"
            android:textColor="#000000"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/beart_recycler_item_imageviewbody"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_below="@id/beart_recycler_item_textviewtitile"
            android:scaleType="center"
            android:src="@mipmap/beart_dialogue" />

        <include
            layout="@layout/beart_recycler_sytle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/beart_recycler_item_imageviewbody"
            android:layout_marginTop="10dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>